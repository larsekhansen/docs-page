{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["search/**/*.ts", "ui/**/*.ts", "ui/**/*.tsx", "vite.config.ts"],
  "exclude": ["node_modules"]
}
