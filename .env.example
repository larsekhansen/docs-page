# Azure OpenAI Configuration (Required for semantic search)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=text-embedding-3-large

# External API Keys (for API-based sources)
IDPORTEN_API_TOKEN=your-idporten-api-token
DIGDIR_API_KEY=your-digdir-api-key

# Scraping Configuration
SCRAPING_DELAY=1000
SCRAPING_CONCURRENCY=3
SCRAPING_USER_AGENT=DigdirDocsPortal/1.0 (+https://docs.digdir.no)

# Monitoring and Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
HEALTH_CHECK_ENDPOINT=https://your-domain.com/api/health

# Development
NODE_ENV=development
HUGO_ENV=development

# Production
NODE_ENV=production
HUGO_ENV=production
BASE_URL=https://docs.digdir.no
