{
  "name": "digdir-docs-portal",
  "version": "0.1.0",
  "description": "Multi-product documentation portal for Digdir products",
  "private": true,
  "scripts": {
    "search:index": "node ./search/indexer.mjs",
    "search:index:fast": "node ./search/indexer.mjs --maxFiles 50",
    "search:api": "tsx ./search/server/server.ts",
    "ui:dev": "vite --config vite.config.ts",
    "ui:build": "vite build --config vite.config.ts",
    "docs:dev": "hugo server --source hugo",
    "docs:build": "hugo --source hugo",
    "sync:docs": "node ./scripts/sync-docs.mjs",
    "smoke-test": "node ./scripts/smoke-test.mjs",
    "health:check": "curl -s http://localhost:8000/api/health | jq .",
    "build": "npm run ui:build && npm run docs:build",
    "build:dev": "npm run ui:build && hugo --source hugo --buildDrafts --buildFuture",
    "clean": "rm -rf hugo/public hugo/resources .hugo_build.lock hugo/static/ui .upstream-docs",
    "dev": "concurrently \"npm run search:api\" \"npm run ui:dev\" \"npm run docs:dev\""
  },
  "dependencies": {
    "@digdir/designsystemet-react": "^1.6.1",
    "express": "^4.19.2",
    "gray-matter": "^4.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.0.0",
    "vite": "^5.4.0"
  }
}
